@model IEnumerable<WebFarmacia.Web.Data.Entities.Medicina>
@{
    ViewData["Title"] = "Home Page";
}
<div class="jumbotron text-center">
    <img  class="jumbotron text-center" src="~/Imagenes/carrucel.gif" class="img-circle" alt="Cinque Terre" />
</div>


<div class="row">
    <div class="col-md-3" id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="1" class="active"></li>
            @foreach (var m in Model)
            {
                <li data-target="#myCarousel" data-slide-to="@m.Id"></li>
            }
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">

            </div>
            @foreach (var m in Model)
            {
                <div class="item">
                    <div class="col-md-3">
                        <h2>@m.Name</h2>
                        <ul>
                            <li>@m.ImageUrl</li>
                            <li>@m.Name</li>
                            <li>@m.Price</li>

                        </ul>
                    </div>

                </div>
            }
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
